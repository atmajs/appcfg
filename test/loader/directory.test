UTest({
	'directory - yml': function(done){
		
		Config
			.fetch([
				{
					path: 'test/config/**.yml'
				}
			])
			.done(function(config){
				
				eq_(config.foo, 'foo');
				eq_(config.bar, 'bar');
				eq_(config.combi.foo, 'foo');
				eq_(config.combi.bar, 'bar');
				
				done();
			});
	},
	
	'directory - js': function(done){
		
		Config
			.fetch([
				{
					path: 'test/config/**.js'
				}
			])
			.done(function(config){
				
				eq_(config.combi.module, 'module');
				done();
			});
	},
	
	'directory - read many': function(done){
		var config = new Config;
		
		config
			.$read('test/config/foo.yml')
			.$read('test/config/bar/*.yml')
			.$read('test/config/module.js')
			;
		
		config.done(function(){
			
			eq_(config.foo, 'foo');
			eq_(config.bar, 'bar');
			eq_(config.combi.foo, 'foo');
			eq_(config.combi.bar, 'bar');
			eq_(config.combi.module, 'module');
			
			done();
		})
	}
	
});