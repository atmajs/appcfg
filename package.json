{
  "name": "appcfg",
  "version": "0.4.60",
  "description": "Application Configuration Library for Node.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/atmajs/appcfg.git"
  },
  "main": "lib/appcfg.js",
  "types": "./lib/appcfg.d.ts",
  "scripts": {
    "test": "atma test",
    "build": "app-bundler",
    "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
    "release": "atma bump && npm run build && npm run build-dts && git add -A && git commit -am \"bump\" && npm publish && git push"
  },
  "keywords": [
    "config",
    "settings"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.22",
    "app-bundler": "^0.1.2",
    "atma": "^0.15.9",
    "atma-io-middleware-importer": "^1.1.36",
    "atma-io-middleware-yml": "^1.1.25",
    "atma-loader-babel": "^1.1.30",
    "atma-loader-ts": "^1.1.17",
    "atma-logger": "latest",
    "dts-bundle": "^0.7.3",
    "mongodb": "latest"
  },
  "dependencies": {
    "atma-class": "^1.1.70",
    "atma-io": "^1.2.56",
    "atma-utils": "^0.1.6"
  },
  "app-bundler": {
    "apps": {
      "node": {
        "file": "src/export-node.ts",
        "outputMain": "lib/appcfg.js"
      },
      "browser": {
        "file": "src/export-browser-umd.ts",
        "outputMain": "lib/appcfg-browser.js",
        "package": {
          "module": "commonjs",
          "moduleName": "appcfg",
          "moduleWrapper": "umd",
          "commonjs": {
            "output": "simplified"
          }
        },
        "vars": {
          "NODE": false
        }
      }
    },
    "common": {
      "package": {
        "module": "commonjs",
        "commonjs": {
          "output": "simplified"
        }
      },
      "defaultExtensions": {
        "js": "ts"
      },
      "middlewares": {
        "js": [],
        "ts": [
          "atma-io-middleware-condcomments:read",
          "atma-io-middleware-importer:read",
          "atma-loader-ts:read"
        ]
      },
      "dynamicDependencies": [
        "atma-io"
      ]
    }
  },
  "atma": {
    "plugins": [
      "atma-loader-ts",
      "atma-io-middleware-condcomments",
      "atma-io-middleware-importer",
      "atma-io-middleware-yml"
    ],
    "settings": {
      "include": {
        "amd": true,
        "extentionDefault": {
          "js": "ts"
        }
      },
      "atma-loader-ts": {
        "extensions": [
          "test",
          "ts"
        ],
        "typescript": {
          "compilerOptions": {
            "#if (TEST)": {
              "module": "AMD"
            },
            "#if (!TEST)": {
              "module": "CommonJS"
            }
          }
        }
      }
    }
  }
}
