
UTest({
    'sync load' : function(){
        
        return Config
            .fetch([
                {
                    path: 'test/config/foo.yml'
                },
                Class({
                    Base: Class.Deferred,
                    read: function(rootConfig){
                        
                        eq_(rootConfig.foo, 'foo');
                        
                        this.config = { custom: 'quux' }
                        this.resolve();
                    },
                    
                    data: {
                        sync: true
                    }
                    
                })
            ])
            .done(config => eq_(config.custom, 'quux'));
    }
})
